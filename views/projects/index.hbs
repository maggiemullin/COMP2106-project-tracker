<h1>{{title}}</h1>
<a href="/projects/add">Add a New Project</a>

<table class="table table-striped table-hover">
    <thead>
    <th>Name</th>
    <th>Due Date</th>
    <th>Course</th>
    <th>Status</th>
    <th>Actions</th>
    {{#each projects}}
        <tr>
            <td>
                <a href="/projects/edit/{{this._id}}">
                {{this.name}}
                </a>
            </td>
            <td>{{shortDate this.dueDate}}</td>
            <td>{{this.course}}</td>
            <td>{{this.status}}</td>
            <td>
                <a href="/projects/delete/{{this._id}}" class="btn btn-danger"
                   onclick="return areYouSure();">
                    Delete
                </a>
            </td>
        </tr>
    {{/each}}
    </thead>
</table>

